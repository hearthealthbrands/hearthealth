    {# SEO: Canonical URL #}
    {% if page.url %}
    <link rel="canonical" href="{{ page.url | absoluteUrl(metadata.url) }}">
    {% endif %}

    <link rel="icon" href="/images/apple-logo.png" type="image/png">
    
    {# Link to the CSS file generated by Tailwind #}
